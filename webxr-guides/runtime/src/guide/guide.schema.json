{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WebXR Guide Schema",
  "type": "object",
  "required": ["guideId", "title", "steps"],
  "properties": {
    "guideId": {
      "type": "string",
      "description": "Unique identifier for the guide"
    },
    "title": {
      "type": "string",
      "description": "Display title of the guide"
    },
    "description": {
      "type": "string",
      "description": "Optional guide description"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "description"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique step identifier"
          },
          "title": {
            "type": "string",
            "description": "Step title"
          },
          "description": {
            "type": "string",
            "description": "Step instructions"
          },
          "target": {
            "type": "string",
            "description": "Target mesh name for highlighting"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Placeholder actions for this step"
          },
          "completion": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["manual", "automatic"],
                "description": "How the step is marked complete"
              }
            }
          }
        }
      }
    }
  }
}
